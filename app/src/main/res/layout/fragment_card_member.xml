<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardMemberFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="horizontal"
        android:background="@drawable/card_member_boobook">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNama"
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/poppins_light"
                android:textSize="12sp"
                android:text="Nama"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewNoAnggota"
                android:layout_width="100dp"
                android:layout_height="18dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_light"
                android:textSize="12sp"
                android:text="No. Anggota"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/textViewKelas"
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins_light"
                android:text="Kelas"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewProfile"
                android:layout_width="68dp"
                android:layout_height="84dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="21dp"
                android:src="@drawable/zyzy"
                app:shapeAppearanceOverlay="@style/RoundedImageView"
                android:scaleType="centerCrop"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout1"
            android:layout_width="262dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewNamaUser"
                android:layout_width="200dp"
                android:layout_height="15dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/poppins_light"
                android:text="Fritzy Rosmerian"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textViewNoAnggotaUser"
                android:layout_width="200dp"
                android:layout_height="18dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/poppins_light"
                android:text="01 - 20100760 - 23062000"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textViewKelasUser"
                android:layout_width="200dp"
                android:layout_height="17dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/poppins_light"
                android:text="11 SMK Negeri 2 Magelang"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageViewTTD"
                android:layout_width="64dp"
                android:layout_height="38dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="3dp"
                android:src="@drawable/ttd_ceo" />

            <ImageView
                android:id="@+id/imageViewBarcode"
                android:layout_width="150dp"
                android:layout_height="37dp"
                android:layout_marginStart="85dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/barcode_user" />
        </LinearLayout>


    </LinearLayout>


</FrameLayout>