<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/active_btn_homepage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="411dp"
        android:layout_height="59dp"
        android:background="#FFFFFF"
        android:paddingTop="8dp"
        app:itemHorizontalTranslationEnabled="true"
        app:labelVisibilityMode="auto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_homepage"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="btn_home"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_homepage_active"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/btn_koleksi"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="btn_library"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_library_inactive" />

            <ImageButton
                android:id="@+id/btn_peringkat"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="btn_peringkat"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_peringkat_inactive" />

            <ImageButton
                android:id="@+id/btn_laporan"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="btn_laporan"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_laporan_inactive" />

        </LinearLayout>

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>