<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/active_btn_homepage"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@null"
    android:clickable="true"
    android:focusable="true"
    android:minWidth="0dp"
    android:minHeight="0dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="41dp"
        android:fontFamily="@font/poppins"
        android:text="Di sini kamu bisa memberikan pengaduan seputar Boobook"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_add_report"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="331dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="70dp"
        android:background="@null"
        android:contentDescription="btn_laporan_guest"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/add_icon_black" />
</androidx.constraintlayout.widget.ConstraintLayout>