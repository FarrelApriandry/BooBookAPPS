<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/active_btn_homepage"
    android:id="@+id/halamanutamaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center|clip_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/button6"
                style="@style/active_btn_homepage"
                android:layout_width="100dp"
                android:layout_height="31dp"
                android:layout_marginLeft="3.5dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="3.5dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/inactive_btn"
                android:text="Romansa" />

            <Button
                android:id="@+id/button5"
                style="@style/active_btn_homepage"
                android:layout_width="104dp"
                android:layout_height="39dp"
                android:layout_marginLeft="3.5dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="3.5dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/inactive_btn"
                android:text="Edukasi" />

            <Button
                android:id="@+id/button4"
                style="@style/active_btn_homepage"
                android:layout_width="100dp"
                android:layout_height="31dp"
                android:layout_marginLeft="3.5dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="3.5dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/inactive_btn"
                android:text="Drama" />

            <Button
                android:id="@+id/btn_Terkini"
                style="@style/active_btn_homepage"
                android:layout_width="122dp"
                android:layout_height="38dp"
                android:layout_marginLeft="3.5dp"
                android:layout_marginRight="3.5dp"
                android:background="@drawable/terkini_btn"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:text="Terkini"
                android:textAllCaps="false"
                android:textAppearance="@style/Theme.DNTYLANCAR"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button3"
                style="@style/active_btn_homepage"
                android:layout_width="127dp"
                android:layout_height="31dp"
                android:layout_marginLeft="3.5dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="3.5dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/inactive_btn"
                android:text="Sedang Populer" />

            <Button
                android:id="@+id/button7"
                style="@style/active_btn_homepage"
                android:layout_width="100dp"
                android:layout_height="31dp"
                android:layout_marginLeft="3.5dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="3.5dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/inactive_btn"
                android:text="Novel" />

            <Button
                android:id="@+id/button8"
                style="@style/active_btn_homepage"
                android:layout_width="100dp"
                android:layout_height="31dp"
                android:layout_marginLeft="3.5dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="3.5dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/inactive_btn"
                android:text="Komik" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>