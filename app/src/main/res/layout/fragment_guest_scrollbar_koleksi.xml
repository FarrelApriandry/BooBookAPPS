<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    style="@style/active_btn_homepage">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="273dp"
        android:layout_height="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/btn_terkini_koleksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="Terbaru"
            android:textAllCaps="false"
            android:textSize="16sp"
            >
        </Button>

        <Button
            android:id="@+id/btn_favorit_koleksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="Favorit"
            android:textAllCaps="false"
            android:textColor="#80292929"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_riwayat_koleksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="Riwayat"
            android:textAllCaps="false"
            android:textColor="#80292929"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="273dp"
        android:layout_height="2dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/underlineBtn_terbaru_koleksi"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_weight="1"
            android:background="@drawable/underlina_shape"/>

        <View
            android:id="@+id/underlineBtn_favorit_koleksi"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_weight="1"
            android:background="@drawable/underlina_shape"/>

        <View
            android:id="@+id/underlineBtn_riwayat_koleksi"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_weight="1"
            android:background="@drawable/underlina_shape"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>