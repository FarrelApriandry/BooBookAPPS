<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    style="@style/active_btn_homepage">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="190dp"
        android:layout_height="32dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_pinjaman_peringkat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:layout_marginStart="2dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="Pinjaman"
            android:textAllCaps="false"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_kunjungan_peringkat"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="Kunjungan"
            android:textAllCaps="false"
            android:textColor="#80292929"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="190dp
"
        android:layout_height="2dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/underlineBtn_pinjaman_peringkat"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:layout_weight="1"
            android:background="@drawable/underlina_shape"/>

        <View
            android:id="@+id/underlineBtn_kunjungan_peringkat"
            android:layout_width="79dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/underlina_shape" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>